@model CreditCardStatement.FrontMVC.Models.CreditCardInfo.CommonCreditCardInfoViewModel

@{
    ViewData["Title"] = "Informacion de tarjetas";
}

<p>
    <a asp-controller="Customer" asp-action="Index" class="btn btn-secondary">Regresar</a>
</p>

<h2>Tarjetas de credito del cliente</h2>

<p>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#creditCardModal">
        Añadir Tarjeta de Crédito
    </button>
</p>

<svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
    <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
    </symbol>
    <symbol id="info-fill" fill="currentColor" viewBox="0 0 16 16">
        <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z" />
    </symbol>
    <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
        <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
    </symbol>
</svg>

@if (TempData["SuccessMessageCreateCard"] != null)
{
    <div class="alert alert-success d-flex align-items-center alert-dismissible fade show" role="alert">
        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill" /></svg>
        <div>
            @TempData["SuccessMessageCreateCard"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

    </div>
}
@if (TempData["ErrorMessageCreateCard"] != null)
{
    <div class="alert alert-danger d-flex align-items-center alert-dismissible fade show" role="alert">
        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill" /></svg>
        <div>
            @TempData["ErrorMessageCreateCard"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}

@if (TempData["WarningMessageCreateCard"] != null)
{
    <div class="alert alert-warning d-flex align-items-center alert-dismissible fade show" role="alert">
        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Warning:"><use xlink:href="#exclamation-triangle-fill" /></svg>
        <div>
            @TempData["WarningMessageCreateCard"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Numero de tarjeta</th>
            <th>Limite de tarjeta</th>
            <th>Saldo disponible</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.creditCardInfos != null)
        {
            @foreach (var item in Model.creditCardInfos)
            {
                <tr>
                    <td>@item.CardNumber</td>
                    <td>@item.CreditLimit.ToString("C")</td>
                    <td>@item.AvailableBalance.ToString("C")</td>
                    <td>
                        <a asp-controller="CreditCardInfo" asp-action="Details" asp-route-creditCardInfoId="@item.CreditCardInfoId" asp-route-customerId="@item.CustomerId" class="btn btn-primary">Ver Detalles</a>
                    </td>
                </tr>
            }
        }else
        {
            <tr>
                <td colspan="2">No se encontraron datos</td>
            </tr>
        }

    </tbody>
</table>


<div class="modal fade" id="creditCardModal" tabindex="-1" aria-labelledby="creditCardModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="creditCardModalLabel">Añadir Tarjeta de Crédito</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="creditCardForm" asp-action="Create">
                    <div class="form-group">
                        <label for="cardNumber">Número de Tarjeta</label>
                        <input type="text" class="form-control" id="cardNumber" name="CardNumber" placeholder="####-####-####-####" required size="19">
                        <div class="invalid-feedback">
                            Por favor, agregue el Número de Tarjeta
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="creditLimit">Límite de Crédito</label>
                        <input type="number" class="form-control" id="creditLimit" name="CreditLimit" required min="1">
                        <div class="invalid-feedback">
                            Por favor, agregue el Límite de Crédito
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="configurableInterestRate">Tasa de Interés Configurable</label>
                        <input type="number" step="0.01" class="form-control" id="configurableInterestRate" name="ConfigurableInterestRate" required min="0.1">
                        <div class="invalid-feedback">
                            Por favor, agregue la Tasa de Interés Configurable
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="configurableMinimumBalancePercentage">Porcentaje de Balance Mínimo Configurable</label>
                        <input type="number" step="0.01" class="form-control" id="configurableMinimumBalancePercentage" name="ConfigurableMinimumBalancePercentage" min="0.1" required>
                        <div class="invalid-feedback">
                            Por favor, agregue el Porcentaje de Balance Mínimo Configurable
                        </div>
                    </div>
                    <input type="hidden" id="customerId" name="CustomerId" value="@Model.CustomerId">
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>



@section Scripts {
    <script>
        $(document).ready(function () {
            $('#cardNumber').inputmask('9999-9999-9999-9999');
        });
    </script>
}

